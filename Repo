<body><header>MJ Traders (Demo)</header><div class="container">
  <div class="balance">Demo Balance: <span id="balance">10000</span> USD</div>  <div class="chart">Live Demo Chart (Simulation)</div>  <div class="controls">
    <input type="number" id="amount" value="500" min="100" />
  </div>  <div class="controls">
    <button class="up" onclick="trade('UP')">UP</button>
    <button class="down" onclick="trade('DOWN')">DOWN</button>
  </div>  <div class="result" id="result">Select trade direction</div>  <div class="history" id="history"><strong>Trade History</strong></div>
</div><script>
  let balance = 10000;

  function trade(direction){
    const amount = parseInt(document.getElementById('amount').value);

    if(amount > balance){
      document.getElementById('result').innerText = 'Insufficient demo balance';
      return;
    }

    const win = Math.random() > 0.5;

    if(win){
      balance += amount;
      document.getElementById('result').innerText = `WIN (${direction})`;
    } else {
      balance -= amount;
      document.getElementById('result').innerText = `LOSE (${direction})`;
    }

    document.getElementById('balance').innerText = balance;

    const h = document.getElementById('history');
    const row = document.createElement('div');
    row.innerText = `${direction} | Amount: ${amount} | ${win ? 'WIN' : 'LOSE'}`;
    h.appendChild(row);
  }
</script></body>
